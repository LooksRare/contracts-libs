{
  "name": "@looksrare/contracts-libs",
  "version": "2.0.1",
  "description": "LooksRare contract helper libraries",
  "author": "LooksRare",
  "license": "MIT",
  "private": false,
  "files": [
    "/abis/*.json",
    "/contracts/*.sol",
    "/contracts/interfaces/*.sol",
    "/contracts/interfaces/generic/*.sol",
    "/contracts/lowLevelCallers/*.sol"
  ],
  "keywords": [
    "looksrare",
    "solidity"
  ],
  "engines": {
    "node": ">=8.3.0"
  },
  "homepage": "https://looksrare.org/",
  "bugs": "https://github.com/LooksRare/contracts-libs/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/LooksRare/contracts-libs.git"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "compile:hardhat": "hardhat compile",
    "compile:forge": "forge build",
    "compile:hardhat:force": "hardhat compile --force",
    "format:check": "prettier --check '**/*.{js,jsx,ts,tsx,sol,json,yaml,md}'",
    "format:write": "prettier --write '**/*.{js,jsx,ts,tsx,json,yaml,md}'",
    "lint": "eslint '**/*.{js,jsx,ts,tsx}'",
    "prepare": "husky install",
    "release": "release-it",
    "test:forge": "forge test",
    "test:hardhat": "hardhat test",
    "test:hardhat:gas": "REPORT_GAS=true hardhat test",
    "test:hardhat:coverage": "hardhat coverage && hardhat compile --force"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@nomiclabs/hardhat-ethers": "^2.0.6",
    "@nomiclabs/hardhat-etherscan": "^3.0.3",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@typechain/ethers-v5": "^7.0.1",
    "@typechain/hardhat": "^2.3.0",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^9.0.0",
    "@types/node": "^12.0.0",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "chai": "^4.2.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.6.4",
    "hardhat": "^2.9.4",
    "hardhat-abi-exporter": "^2.9.0",
    "hardhat-gas-reporter": "^1.0.8",
    "husky": "^7.0.4",
    "merkletreejs": "^0.2.31",
    "prettier": "^2.3.2",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "release-it": "^15.0.0",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.7.21",
    "solmate": "^6.6.1",
    "ts-node": "^10.1.0",
    "typechain": "^5.1.2",
    "typescript": "^4.5.2"
  }
}
